/* pages/peonySearch/peonySearch.wxss */
@import "../peonyNoNetwork/peonyNoNetwork.wxss";
page {
  height: 100%;
}

.peonySearch-container {
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
  padding-top: 37rpx;
  /* background:#80cfbc; */
  background: #f2f2f2;
  -webkit-overflow-scrolling: touch;
}

/* 搜索框盒子 */

.searchBox {
  width: 100%;
  height: 75rpx;
  position: relative;
  box-sizing: border-box;
  padding-left: 21rpx;
}

.searchInp {
  width: 620rpx;
  font-size: 31rpx;
  height: 75rpx;
  box-sizing: border-box;
  line-height: 75rpx;
  padding-left: 23rpx;
  background: #fff;
}
.searchIcon {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 120rpx;
  top: 18rpx;
}
.cancelSearch{
  position: absolute;
  top: 18rpx;
  font-size: 31rpx;
  right: 25rpx;
}

.empty{
  margin-top: 15rpx;
}
/* 搜索展示的图片 */

.peonySearch-image,.judgeSearch {
  width: 719rpx;
  margin: 0 auto;
  height: 25%;
  box-sizing: border-box;
  /* overflow: auto; */
  display: flex;
  flex-direction: row;
  /* flex-wrap: wrap; */
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  border-radius: 5px;
}

.peonySearch-image_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
  width: 100%;
  height: 100%
}

.image-item {
  margin-top: 40rpx;
  width: 40%;
  overflow: hidden;
}

.image-item image {
  width: 260rpx;
  height: 195rpx;
  border-radius: 5px
}

.image-item_name {
  width:55%;
  flex-direction: column;
  line-height: 60rpx;
  margin-left: 10rpx;
  height: 100%;
}

.image-item_name_text{
  height: 100%;
}

.temp_txt{
  height: 40%;
  padding-top: 50rpx;
  padding-bottom: 20rpx;
  font-size: 35rpx;
  color: #333;
  font-family: "Microsoft YaHei";
}
.temp_time{
  margin-left: 10rpx;
  font-size: 28rpx;
  padding-top: 0rpx;
  padding-bottom: 20rpx;
  color:#ccc;
  font-family: "Microsoft YaHei";
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
