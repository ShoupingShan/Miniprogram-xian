/* pages/peonyDetails/peonyDetails.wxss */
@import "../peonyNoNetwork/peonyNoNetwork.wxss";
page {
  height: 100%;
}

.peonyDetails-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.Details-img image {
  width: 100%;
  height: 421rpx;
}

.Details-name {
  width: 100%;
  height: 85rpx;
  line-height: 80rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 21rpx;
  font-size: 36rpx;
  color: #333;
  border-bottom: 1px solid #ccc;
}

.Details-typeName {
  margin-left: 15rpx;
}

.Details-intro {
  width: 100%;
  height: 75rpx;
  overflow: hidden;
  line-height: 75rpx;
  padding-left: 21rpx;
  box-sizing: border-box;
  font-size: 31rpx;
}


/* 富文本编辑器 */
.Details-content {
  overflow: auto;
  width: 100%;
  padding-right:21rpx; 
  padding-left: 21rpx;
  padding-bottom: 35rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}



