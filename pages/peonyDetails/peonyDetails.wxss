/* pages/peonyDetails/peonyDetails.wxss */
@import "../peonyNoNetwork/peonyNoNetwork.wxss";
page {
  height: 100%;
}

.peonyDetails-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.Details-img {
  padding-left: 80rpx;
  width: 100%;
  /* height: 100%; */
  height: 421rpx;
}

.Details-name {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.Details-cate{
  width: 40%;
  padding-left: 25rpx;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 88rpx;
  height: 88rpx;
  color: #000;
  border-bottom: 1px solid #ccc;
}

.neighbor1{
  width:10%;
  padding-left: 25rpx;
  box-sizing: border-box;
  height: 88rpx;
  /* padding-left: 21rpx; */
  overflow: hidden;
  border-bottom: 1px solid #ccc;
}
.neighbor{
  margin-top: 20rpx;
  height: 45rpx;
  width: 45rpx;
}
.Details-typeName {
  margin-left: 15rpx;
}

.Details-intro {
  width: 100%;
  height: 75rpx;
  overflow: hidden;
  line-height: 75rpx;
  padding-left: 21rpx;
  box-sizing: border-box;
  font-size: 31rpx;
}



/* 富文本编辑器 */
.Details-content {
  overflow: auto;
  width: 100%;
  padding-right:21rpx; 
  padding-left: 21rpx;
  padding-bottom: 35rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}



