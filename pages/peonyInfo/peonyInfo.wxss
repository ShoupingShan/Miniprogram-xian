.peonyInfo {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* 图片盒子 */

.peonyInfo-imageBox {
  width: 100%;
  height: 417rpx;
  background: #f2f2f2;
  box-sizing: border-box;
  overflow: hidden;
}

.peonyInfo-imageBox_item {
  height: 365rpx;
  overflow: hidden;
  padding-left: 5rpx;
  padding-right: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  box-sizing: border-box;
  width: 100%;
}

/* 上传图片 */

.imageBox-item_uploadImg {
  width: 365rpx;
  height: 365rpx;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

/* 模板图片 */

.imageBox-item_tempImg {
  width: 365rpx;
  border-radius: 10rpx;
  height: 365rpx;
  /* margin-left: 18rpx; */
  position: relative;
  overflow: hidden;
}

/* 设置图片大小 */

.imageBox-item_tempImg  image, .imageBox-item_uploadImg image {
  width: 365rpx;
  height: 365rpx;
}

/* 设置图片文字位置 */

.item-tempImg_text, .item-uploadImg_text {
  position: absolute;
  right: 5rpx;
  top: 12rpx;
}

/* 设置模板图片文字大小 */

.item-tempImg_text {
  font-size: 25rpx;
  color: #d4237a;
  font-weight: 400;
}

/* 设置上传图片文字大小 */

.item-uploadImg_text {
  font-size: 25rpx;
  color: #d4237a;
  font-weight: 400;
}

.peonyInfo-locationAndDate {
  width: 100%;
  height: 52rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
}

.peonyInfo-location {
  width: 50%;
  display: flex;
  padding-left: 21rpx;
  box-sizing: border-box;
  align-items: center;
}
.peonyInfo-location_icon{
  width: 15rpx;
  height: 21rpx;
}
.peonyInfo-location_text{
  margin-left: 15rpx;
  color: #666666;
}

.peonyInfo-Date {
  width: 50%;
  display: flex;
  padding-right: 21rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: flex-end;
}
.peonyInfo-date_icon{
width: 21rpx;
height: 21rpx;
margin-right: 15rpx;
}
.peonyInfo-date_text{
color: #666666;
}
