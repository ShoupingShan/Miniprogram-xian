/* pages/peonySearch/peonySearch.wxss */
@import "../peonyNoNetwork/peonyNoNetwork.wxss";
page {
  height: 100%;
}

.peonySearch-container {
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
  padding-top: 37rpx;
  background:#80cfbc;
}

/* 搜索框盒子 */

.searchBox {
  width: 100%;
  height: 75rpx;
  position: relative;
  box-sizing: border-box;
  padding-left: 21rpx;
}

.searchInp {
  width: 620rpx;
  font-size: 31rpx;
  height: 75rpx;
  box-sizing: border-box;
  line-height: 75rpx;
  padding-left: 23rpx;
  background: #fff;
}
.searchIcon {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 120rpx;
  top: 18rpx;
}
.cancelSearch{
  position: absolute;
  top: 18rpx;
  font-size: 31rpx;
  right: 25rpx;
}

/* 搜索展示的图片 */

.peonySearch-image,.judgeSearch {
  width: 709rpx;
  margin: 0 auto;
  /* height: 100%; */
  box-sizing: border-box;
  /* overflow: auto; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 15rpx;
  padding-bottom: 15rpx;
}

.peonySearch-image_item {
  width: 346rpx;
  height: 406rpx;
  margin-top: 24rpx;
  background: #fff;
}
.peonySearch-image_item:nth-child(2n){
  margin-left: 17rpx;
}
.image-item {
  height: 346rpx;
  overflow: hidden;
}

.image-item image {
  width: 346rpx;
  height: 346rpx;
}

.image-item_name {
  height: 60rpx;
  font-size: 31rpx;
  color: #333;
  line-height: 60rpx;
  margin-left: 10rpx;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
