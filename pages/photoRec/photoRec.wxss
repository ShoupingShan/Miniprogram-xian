/* pages/photoRec/photoRec.wxss */
page{
  height: 100%;
}
/* 首页盒子容器 */
.peonyRecContainer{
  width: 100%;
  height: 100%;
}
/* 相机拍摄 */
.peonyRec-flower{
  width: 100%;
  height: 577rpx;
}
.peonyRec-flower_item{
 height: 266rpx;
 width: 364rpx;
 margin:0 auto;
 margin-top: 190rpx;
 overflow: hidden;
}
.flower-image{
 height: 266rpx;
 width: 364rpx;
}
/* 相机拍摄功能图片 */
.peonyRec-camera{
  width: 208rpx;
  height: 208rpx;
  margin: 0 auto;
  border-radius: 50%;
  border: 1px solid red;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 相机图片大小 */
.peonyRec-camera .camera-phone{
  width: 50rpx;
  height: 44rpx;
}
/* 相机内部文字大小 */
.peonyRec-camera .camera-text{
  font-size: 31rpx;
  margin-top: 24rpx;
  color: #000000;
  font-weight: 400;
}
/*从相册中选取图片文字 */
.selectImage{
  margin-top: 10rpx;
  width: 100%;
  text-align: center;
  font-size: 31rpx;
}
.selectImage-back{
  width: 15rpx;
  height: 25rpx;
  margin-left: 11rpx;
}


/* pages/animation/animation.wxss */
  #loading-center-absolute {
    position: absolute;
    left: 50%;
    top: 50%;
    height: 150rpx;
    width: 150rpx;
    margin-top: -75rpx;
    margin-left: -75rpx; 
    -ms-transform: rotate(45deg); 
      -webkit-transform: rotate(45deg);
      transform: rotate(45deg); 
  }
  .object{
    width: 20rpx;
    height: 20rpx;
    background-color:#FFF;
    position: absolute;
    left: 65rpx;
    top: 65rpx;
    }
  .object:nth-child(2n+0) {
    margin-right: 0px;
  }
  #object_one {
    -webkit-animation: object_one 2s infinite;
    animation: object_one 2s infinite;
    -webkit-animation-delay: 0.2s; 
      animation-delay: 0.2s; 
    }
  #object_two {
    -webkit-animation: object_two 2s infinite;
    animation: object_two 2s infinite;
    -webkit-animation-delay: 0.3s; 
      animation-delay: 0.3s; 
    }
  #object_three {
    -webkit-animation: object_three 2s infinite;
    animation: object_three 2s infinite;
    -webkit-animation-delay: 0.4s; 
      animation-delay: 0.4s; 
    }
  #object_four {
    -webkit-animation: object_four 2s infinite;
    animation: object_four 2s infinite;
    -webkit-animation-delay: 0.5s; 
      animation-delay: 0.5s; 
  }
  #object_five {
    -webkit-animation: object_five 2s infinite;
    animation: object_five 2s infinite;
    -webkit-animation-delay: 0.6s; 
      animation-delay: 0.6s; 
  }
  #object_six {
    -webkit-animation: object_six 2s infinite;
    animation: object_six 2s infinite;
    -webkit-animation-delay: 0.7s; 
      animation-delay: 0.7s; 
  }
  #object_seven {
    -webkit-animation: object_seven 2s infinite;
    animation: object_seven 2s infinite;
    -webkit-animation-delay: 0.8s; 
      animation-delay: 0.8s; 
  }
  #object_eight {
    -webkit-animation: object_eight 2s infinite;
    animation: object_eight 2s infinite;
     -webkit-animation-delay: 0.9s; 
      animation-delay: 0.9s; 
  }
  #object_big{
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    left: 50rpx;
    top: 50rpx;
    -webkit-animation: object_big 2s infinite;
    animation: object_big 2s infinite;
    -webkit-animation-delay: 0.5s; 
      animation-delay: 0.5s; 
  } 
  @-webkit-keyframes object_big {
   50% { -webkit-transform: scale(0.5); }
  }
  @keyframes object_big {
   50% { 
      transform: scale(0.5);
      -webkit-transform: scale(0.5);
    } 
  }

  @keyframes object_one {
   50% { 
      transform: translate(-65rpx,-65rpx) ;
      -webkit-transform: translate(-65px,-65px) ;
    } 
  }

  @keyframes object_two {
   50% { 
      transform: translate(0,-65rpx) ; 
      -webkit-transform: translate(0,-65rpx) ; 
    } 
  }

  @keyframes object_three {
   50% { 
      transform: translate(65rpx,-65rpx) ;
      -webkit-transform: translate(65rpx,-65rpx) ;
    } 
  }

  @keyframes object_four {
    50% { 
      transform: translate(65rpx,0) ;
      -webkit-transform: translate(65rpx,0) ;
    } 
  }

  @keyframes object_five {
    50% { 
      transform: translate(65rpx,65rpx) ;
      -webkit-transform: translate(65rpx,65rpx) ;
    } 
  }

  @keyframes object_six {
    50% { 
      transform:  translate(0,65rpx) ;
      -webkit-transform:  translate(0,65rpx) ;
    } 
  }

  @keyframes object_seven {
    50% { 
      transform: translate(-65rpx,65rpx) ;
      -webkit-transform: translate(-65px,65px) ;
    } 
  }
  @keyframes object_eight {
    50% { 
      transform: translate(-65rpx,0) ;
      -webkit-transform: translate(-65rpx,0) ;
    } 
  } 

