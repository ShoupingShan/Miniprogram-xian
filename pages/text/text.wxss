/* pages/text/text.wxss */

/*暂无数据的展示*/

.noDataText {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  margin-left: -100rpx;
  margin-top: -25rpx;
  font-size: 16px;
  color: #ccc;
}

.shop {
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  position: relative;
}

.shop-img {
  width: 160rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.shop-info {
  width: 520rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #666;
}

.shop-title {
  color: #333;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.shop-title_name {
  width: 25%;
  font-size: 12px;
  text-align: right;
}

.shop-title_text {
  width: 75%;
  font-size: 14px;
  font-weight: 700;
}

.shop-introduction {
  height: 120rpx;
  margin-top: 5rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}

.shop-introduction_title {
  width: 25%;
  text-align: right;
  font-size: 14px;
}

.shop-introduction-text {
  width: 75%;
  font-size: 14px;
  height: 100rpx;
  padding-left: 5rpx;
  box-sizing: border-box;
  padding-top: 1rpx;
  overflow: hidden;
}

.shop-time {
  margin-top: 5rpx;
}
